@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="list-group">
        <li class="p-2 list-group-item bg-dark">
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "color:white" })
        </li>
        <li class="p-2 list-group-item bg-dark">
            <a href="javascript:document.getElementById('logoutForm').submit()" style="color:white">Wyloguj</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="list-group">
        <li class="p-2 list-group-item bg-dark">@Html.ActionLink("Zarejestruj", "Register", "Account", null, new { id = "registerLink", style = "color:white" })</li>
        <li class="p-2 list-group-item bg-dark">@Html.ActionLink("Zaloguj", "Login", "Account", null, new { id = "loginLink", style = "color:white" })</li>
    </ul>
}
