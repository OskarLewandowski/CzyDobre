<!DOCTYPE html>
<html>
<head>
    <meta name="description" content="Znajdź najlepiej oceniane dania i restauracje oceniane przez naszych użytkowników w Twojej okolicy! Sprawdź czy dobre już teraz na CzyDobre.pl" />
    <meta name="keywords" content="czydobre, czydobre.pl, najlepszy kebab, najlepsza pizza, top pizza, top kebab, najlepsza w" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CzyDobre.pl - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="login-container">
        @Html.Partial("_LoginPartial")
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Html.Partial("_FooterPartial")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
