@using CzyDobre.Models
@using reCAPTCHA.MVC
@model ProductFormModels
@{
    ViewBag.Title = "Dodawanie produktu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12 h-max">
        <div style="text-align: center;">@Html.Partial("_Notifications")</div>
        <h1 class="titleH1">@ViewBag.Title</h1>
        @using (Html.BeginForm("AddProducts", "Home", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "Loading()" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ProductName, new { placeholder = "Nazwa Produktu", @class = "pl-4 form-control" })
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.ProductDescription, new { placeholder = "Opis Produktu", @class = "pl-4 form-control" })
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CategoryName, new { placeholder = "Podaj kategorie", @class = "pl-4 form-control", @id = "CategorySE" })

                    <script defer src="~/Scripts/AutoCompleteCat.js"></script>
                </div>
            </div>

            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.Label("Wstaw Zdjęcie Tytułowe:", new { @class = "col-md-4 control-label" })
                    @Html.TextBoxFor(m => m.Icon, new { @type = "file", @class = "form-control" })
                    <p style="text-align: left; padding: 3px;">Maksymalna wielkość załącznika wynosi 5MB</p>
                </div>
            </div>

            <div class="form-group" align="center">
                @Html.Label("Lokalizacja", new { @class = "col-md-2 control-label" })
                @Html.TextBoxFor(m => m.LocName, new { @class = "col-md-2 control-label", @id = "pac-input", @type = "text", @placeholder = "Search Box" })

                <div id="map" style="width: 500px; height: 500px">

                </div>


                <script src="~/Scripts/GeoMapa.js"></script>
                <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDw4M0s-wdhkjGK1L5BkWzyilxKp15QnGY&callback=initAutocomplete&libraries=places&v=weekly"
                        async></script>
            </div>

            <div class="form-group" align="center">
                <div class="col-md-10">
                    <!--
                Html.TextBoxFor(m => m.Image, new { type = "file", multiple = "multiple", class = "form-control" })
                <p style="text-align: left; padding: 3px;">Maksymalna wielkość załącznika wynosi 5MB</p> -->

                </div>
            </div>
            <div class="form-group" align="center" style="color: #df3545ff">
                @Html.Recaptcha()
                @Html.ValidationMessage("ReCaptcha")
            </div>

            <div class="form-group" align="center">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Wyślij" class="btn btn-success" style="font-size: 20px" />
                </div>
            </div>

        }
    </div>
</div>
@Html.Partial("_Loading")
