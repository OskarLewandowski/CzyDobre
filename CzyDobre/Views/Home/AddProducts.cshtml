@using CzyDobre.Models
@using reCAPTCHA.MVC
@model ProductFormModels
@{
    ViewBag.Title = "Dodawanie produktu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12 h-max">
        <h1 class="titleH1">@ViewBag.Title</h1>
        @using (Html.BeginForm("AddProducts", "Home", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "Loading()" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ProductName, new { placeholder = "Nazwa Produktu", @class = "pl-4 form-control" })
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.ProductDescription, new { placeholder = "Opis Produktu", @class = "pl-4 form-control" })
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Id_Category, ViewBag.CategoryList as SelectList, "--Wybierz Kategorię--", new { @class = "pl-4 form-control" })
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Id_Localization, ViewBag.LocalizationsList as SelectList, "--Lokalizacja--", new { @class = "pl-4 form-control" })
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Id_Ingredients, ViewBag.IngredientsList as SelectList, "--Składniki--", new { @class = "pl-4 form-control" })
                </div>
            </div>
            //<div class="form-group" align="center">
              //  <div class="col-md-10">
              //      @Html.CheckBox("Ostre", false)
              //      Ostre
              //  </div>
          //  </div>

            // <div class="form-group" align="center">
            //  <div class="col-md-10">
            //     @Html.TextBoxFor(m => m.Attachment, new { type = "file", multiple = "multiple", @class = "form-control" })
            //    <p style="text-align: left; padding: 3px;">Maksymalna wielkość załącznika wynosi 5MB</p>
            // </div>
            //</div>
            <div class="form-group" align="center" style="color: #df3545ff">
                @Html.Recaptcha()
                @Html.ValidationMessage("ReCaptcha")
            </div>
            <div class="form-group" align="center">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Wyślij" class="btn btn-success" style="font-size: 20px" />
                </div>
            </div>
            <div style="text-align: center;">@Html.Partial("_Notifications")</div>
        }
    </div>
</div>
@Html.Partial("_Loading")
