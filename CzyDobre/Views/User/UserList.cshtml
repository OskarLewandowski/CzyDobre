@model List<CzyDobre.Models.AspNetUser>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="role-div">
    <h2>Użytkownicy</h2>
    <div style="text-align: center;">@Html.Partial("_Notifications")</div>
    <hr />
    <div class="table">
        <table id="users" class="table table-bordered table-hover display">
            <thead>
                <tr class="table-role">
                    <th>ID</th>
                    <th>Email</th>
                    <th>Zweryfikowany Email</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Nick</th>
                    <th>Akcja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Email</td>

                        @if (item.EmailConfirmed == true)
                        {
                            <td>Tak</td>
                        }
                        else
                        {
                            <td>Nie</td>
                        }

                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.NickName</td>
                        <td>
                            @Html.ActionLink("Edytuj", "Edit", "User", new { item.Id, item.Email, item.EmailConfirmed, item.FirstName, item.LastName, item.NickName }, new { @class = "btn btn-primary", onclick = "return confirm('Czy na pewno chcesz EDYTOWAĆ użytkownika?');" })
                            <hr />
                            @Html.ActionLink("Usuń", "Delete", "User", new { idUser = item.Id, nick = item.NickName }, new { @class = "btn btn-danger", onclick = "return confirm('Czy na pewno chcesz USUNĄĆ użytkownika?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#users').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/pl.json"
                }
            });
        });
    </script>
}